<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorE6A1DF">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_custom_charge_display_cl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_white_top_10cir"
        app:layout_constraintBottom_toTopOf="@id/view_custom_charge_content_cl"
        app:layout_constraintHeight_percent="0.15"
        tools:layout_editor_absoluteX="0dp">


        <View
            android:id="@+id/view_custom_charge_input_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_f7_5cir"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.46"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />


        <TextView
            android:id="@+id/view_custom_charge_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="pls_input_charge_num"
            android:textColor="@color/colorD8"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/view_custom_charge_input_bg"
            app:layout_constraintStart_toStartOf="@id/view_custom_charge_input_bg"
            app:layout_constraintTop_toTopOf="@id/view_custom_charge_input_bg" />

        <TextView
            android:id="@+id/view_custom_charge_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="/rmb_yuan"
            android:textColor="@color/colorB8B8B8"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/view_custom_charge_input_bg"
            app:layout_constraintEnd_toEndOf="@id/view_custom_charge_input_bg"
            app:layout_constraintTop_toTopOf="@id/view_custom_charge_input_bg" />


        <TextView
            android:id="@+id/view_custom_charge_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="custom_charge_tips"
            android:textColor="@color/color9"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/view_custom_charge_input_bg"
            app:layout_constraintTop_toBottomOf="@id/view_custom_charge_input_bg"
            app:layout_constraintVertical_bias="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_custom_charge_content_cl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorF8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.427">


        <TextView
            android:id="@+id/view_custom_charge_fast_688"
            android:layout_width="72dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/bg_f8_s_ad_5cir"
            android:gravity="center"
            android:text="custom_charge_fast_688"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/view_custom_charge_fast_2888"
            android:layout_width="72dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_f8_s_ad_5cir"
            android:gravity="center"
            android:text="custom_charge_fast_2888"
            app:layout_constraintStart_toEndOf="@id/view_custom_charge_fast_688"
            app:layout_constraintTop_toTopOf="@id/view_custom_charge_fast_688" />


        <TextView
            android:id="@+id/view_custom_charge_fast_5888"
            android:layout_width="72dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_f8_s_ad_5cir"
            android:gravity="center"
            android:text="custom_charge_fast_5888"
            app:layout_constraintStart_toEndOf="@id/view_custom_charge_fast_2888"
            app:layout_constraintTop_toTopOf="@id/view_custom_charge_fast_688" />

        <TextView
            android:id="@+id/view_custom_charge_fast_9999"
            android:layout_width="72dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_f8_s_ad_5cir"
            android:gravity="center"
            android:text="custom_charge_fast_9999"
            app:layout_constraintStart_toEndOf="@id/view_custom_charge_fast_5888"
            app:layout_constraintTop_toTopOf="@id/view_custom_charge_fast_688" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="7dp"
            android:columnCount="4"
            android:rowCount="4"
            android:alignmentMode="alignBounds"
            android:orientation="horizontal"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toTopOf="@id/view_custom_charge_protocol"
            app:layout_constraintTop_toBottomOf="@id/view_custom_charge_fast_688">

            <TextView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="1"
                android:background="@drawable/bg_white_5cir"/>
            <TextView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:layout_rowWeight="1"

                android:text="2"
                android:background="@drawable/bg_white_5cir"/>

            <TextView
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:background="@drawable/bg_white_5cir"
                android:gravity="center"
                android:text="3" />

            <TextView
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:background="@drawable/bg_white_5cir"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:background="@drawable/bg_white_5cir"
                android:gravity="center"
                android:text="4" />

            <TextView
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:background="@drawable/bg_white_5cir"
                android:gravity="center"
                android:text="5" />

            <TextView
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:background="@drawable/bg_white_5cir"
                android:gravity="center"
                android:text="6" />
            <TextView
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="1"
                android:layout_rowWeight="1"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowSpan="3"
                android:background="@drawable/bg_white_5cir"/>

            <TextView
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"
                android:background="@drawable/bg_white_5cir"
                android:gravity="center"
                android:text="7" />

            <TextView
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"

                android:background="@drawable/bg_white_5cir"
                android:gravity="center"
                android:text="8" />

            <TextView
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="1dp"

                android:background="@drawable/bg_white_5cir"
                android:gravity="center"
                android:text="9" />

            <TextView
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="0"
                android:layout_rowWeight="1"
                android:layout_columnSpan="3"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_white_5cir"/>
            

        </GridLayout>

        <TextView
            android:id="@+id/view_custom_charge_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:text="我已阅读并同意《用户充值协议》"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>