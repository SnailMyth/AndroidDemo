<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <!-- enable window content transitions -->
    <item name="android:windowContentTransitions">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="Widget.AppTheme.MyView" parent="">
    <item name="android:background">@color/gray_400</item>
    <item name="exampleColor">@color/light_blue_400</item>
  </style>

  <!--ShapeableImageView 圆角-->
  <style name="RoundedStyle1">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopLeft">50%</item>
    <item name="cornerSizeBottomRight">50%</item>
  </style>

  <style name="RoundedStyle2">
    <item name="cornerFamily">cut</item>
    <item name="cornerSize">50%</item>
  </style>

  <style name="item_bt">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">44dp</item>
    <item name="android:background">@color/gray</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center</item>


  </style>

  <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
    <item name="android:background">@color/black_overlay</item>
    <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
  </style>

  <declare-styleable name="SoundSpectrumLinearView">
    <!--横线的宽-->
    <attr name="sslv_lineWidth" format="dimension" />
    <!--最大线条数-->
    <attr name="sslv_line_count" format="integer" />
    <!--横线的间距-->
    <attr name="sslv_lineGap" format="dimension" />
    <!--动画时间-->
    <attr name="sslv_duration" format="integer" />
    <!--每个线条动画播放一次的时间-->
    <attr name="sslv_once_time" format="integer" />
    <attr name="sslv_auto_play" format="boolean" />
  </declare-styleable>

  <declare-styleable name="LinearSemicircleAlphaView">
    <!--动画时间-->
    <attr name="lsav_duration" format="integer" />
  </declare-styleable>

  <declare-styleable name="LivingHeadView2">
    <attr name="lv_head_size" format="dimension" />
    <attr name="living_wave_height" format="dimension" />
  </declare-styleable>

  <declare-styleable name="HeadView">
    <attr name="head_border_width" format="dimension" />
    <attr name="head_border_color" format="color" />
    <!--  有挂件时，挂件的尺寸  -->
    <attr name="head_pendant_size" format="dimension" />
    <attr name="head_pendant_scale" format="float" />
    <attr name="android:src" />
    <attr name="android:scaleType" />


  </declare-styleable>

</resources>